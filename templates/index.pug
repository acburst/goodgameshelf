- isIndex = true;

- metadescription = 'Curated board game recommendations based on games you already enjoy. We want to make it easy for you to find your next game to play!'

doctype html
include ../includes/_head.pug
body
  include ../includes/_analytics.pug
  .container
    .navbar
      a.logo-title(href='https://goodgameshelf.com')
        img.logo-desktop(src='img/logo.png' alt='Good Game Shelf')
        img.logo-mobile(src='img/logo-mobile.png' alt='Good Game Shelf')
      include ../includes/_sidebar.pug
    main
      a.promotional(href='https://honeycomb.goodgameshelf.com')
        img(src='img/honeycomb-logo-full.webp' alt="Honeycomb Word Game")
        img(src='img/play-our-new-game-handwritten.webp' alt="Honeycomb Word Game")

      .content
        .section
          h1 Welcome to Good Game Shelf
          p.desktop-welcome-text
            | We want to help you find your next board game! We give curated recommendations for games you should buy, based on games you already love. #[strong Click a game on the left] to get started.
          p.mobile-welcome-text
            | We want to help you find your next board game! We give curated recommendations for games you should buy, based on games you already love. #[strong Tap the menu above] and choose a game you like to get started.
          hr
        .section
          h2.category-header Recent Articles
          .card-container
            a.card(href="recommendations/risk.html")
              h3 Games like Risk
              p April 25, 2022
              img(src='img/risk.jpg' alt="Risk board game in progress")
            a.card(href="best-games/new-players.html")
              h3 Games for New Players
              p Apr 18, 2022
              img(src='img/ticket-to-ride-new-players.jpg' alt="Ticket to Ride board game")
            a.card(href="recommendations/great-western-trail.html")
              h3 Games like GWT
              p October 12, 2021
              img(src='img/great-western-trail.jpg' alt="Great Western Trail board game")
            a.card(href="recommendations/wingspan.html")
              h3 Games like Wingspan
              p October 10, 2021
              img(src='img/wingspan-board-game.jpg' alt="Wingspan board game in progress")
          br
          br
  include ../includes/_footer.pug